<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manager_main"
                android:textSize="20sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="#00f"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                    android:id="@+id/btn_newInCheck"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="@string/Check_main"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:onClick="textViewClick"
                    />

            <TextView
                    android:id="@+id/btn_checkStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="@string/checkStatus_main"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:onClick="textViewClick"
                    />
        </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailCheck_main"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#00f"
            />
    <!-- 以下默认显示本周、月、年的收支情况使用fragment+viewPager实现-->
        <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                >

                <TextView
                        android:id="@+id/btn_dayDetailCheck"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="@string/dayCheck_main"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:onClick="textViewClick"
                        />

                <TextView
                        android:id="@+id/btn_weekDetailCheck"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="@string/weekCheck_main"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:onClick="textViewClick"
                        />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                        android:id="@+id/btn_mouthDetailCheck"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="@string/mouthCheck_main"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:onClick="textViewClick"
                        />

                <TextView
                        android:id="@+id/btn_yearDetailCheck"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="@string/yearCheck_main"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:onClick="textViewClick"
                        />

        </LinearLayout>


</LinearLayout>

